package com.aurionpro.MathUtils.Test;

import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.params.ParameterizedTest;
import org.junit.jupiter.params.provider.CsvSource;

import com.aurionpro.MathUtils.model.MathUtils;
import com.aurionpro.junit.model.Calculator;

public class MathUtilsTest {
	MathUtils mathUtils = new MathUtils();

	@BeforeEach
	public void start() {
		System.out.println("Before starting of each test");
	}

	@AfterEach
	public void end() {
		System.out.println("After ending of each test");
	}

	@ParameterizedTest
	@CsvSource({ "1, 2, 3", "2, 3, 5", "4, 5, 9" })
	public void testAdd(int a, int b, int expected) {
		int result = mathUtils.add(a, b);
		assertEquals(expected, result);
	}
}
